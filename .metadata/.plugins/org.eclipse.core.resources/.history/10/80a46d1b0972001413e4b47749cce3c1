	public ClientGUI()
	{
		super( "Client GUI Application" );
		
		//gets container for components
		contents = getContentPane();
		
		//set the layout manager
		
		//instantiate GUI components and other instance variables
		
		//add GUI components to the content pane
		
		//set the original size of window
		setSize(800, 600);
		
		//make window visible
		setVisible( true );
		
	}
	
